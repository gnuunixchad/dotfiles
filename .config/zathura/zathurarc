set font 'SourceCodePro normal 11'
set guioptions 'sv'
set selection-clipboard clipboard
set selection-notification false
set statusbar-h-padding 0
set statusbar-v-padding 0
set statusbar-home-tilde true
set statusbar-page-percent true
set page-padding 1
set database 'sqlite'
set zoom-step 2
set scroll-step 30
set scroll-hstep 10
set recolor true
set recolor-keephue true
set recolor-reverse-video true
set statusbar-basename
set adjust-open width

#set default-bg rgba(17,17,17,0.9)
#set recolor-lightcolor rgba(17,17,17,0)
set default-bg "#111111"
set recolor-lightcolor "#111111"
set statusbar-bg "#427b58"
set recolor-darkcolor "#dddddd"
set highlight-fg '#427b58'

map I recolor
map n scroll half-down
map p scroll half-up
map P print
map i zoom in
map o zoom out
map b toggle_statusbar
map r rotate rotate-cw
map R rotate rotate-ccw

map w adjust_window width
