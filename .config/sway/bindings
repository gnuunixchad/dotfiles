# vim:ft=swayconfig
# @author nate zhou
# @since 2023,2024,2025,2026
# .config/sway/bindings

bindsym $mod+Shift+r reload
bindsym --release Caps_Lock exec "if [ $(cat /sys/class/leds/input*::capslock/brightness | head -1) = 0 ]; then notify-send -r 195 -t 1100 'CapsLock '; else notify-send -r 195 -t 1100 'CapsLock '; fi"

bindsym $mod+p      exec $menu
bindsym $mod+Return exec $term
bindsym $mod+v      exec "$term -T \"Floating_Term\" -o colors.alpha=0.9 abduco -A dvtm dvtm-status"
bindsym $mod+r      exec $term lf
bindsym $mod+q      exec qutebrowser

bindsym $mod+minus       exec "${HOME}/.local/bin/audio sink --minus10"
bindsym $mod+equal       exec "${HOME}/.local/bin/audio sink --plus10"
bindsym $mod+Shift+minus exec "${HOME}/.local/bin/audio sink --minus"
bindsym $mod+Shift+equal exec "${HOME}/.local/bin/audio sink --plus"
bindsym $mod+backspace   exec "${HOME}/.local/bin/audio sink --mute"

bindsym $mod+Control+minus       exec "${HOME}/.local/bin/audio source --minus10"
bindsym $mod+Control+equal       exec "${HOME}/.local/bin/audio source --plus10"
bindsym $mod+Control+Shift+minus exec "${HOME}/.local/bin/audio source --minus"
bindsym $mod+Control+Shift+equal exec "${HOME}/.local/bin/audio source --plus"
bindsym $mod+Control+backspace   exec "${HOME}/.local/bin/audio source --mute"

bindsym $mod+bracketleft                exec "${HOME}/.local/bin/bright --minus10"
bindsym $mod+bracketright               exec "${HOME}/.local/bin/bright --plus10"
bindsym $mod+Shift+bracketleft          exec "${HOME}/.local/bin/bright --minus"
bindsym $mod+Shift+bracketright         exec "${HOME}/.local/bin/bright --plus"
bindsym $mod+Control+Shift+bracketleft  exec "${HOME}/.local/bin/bright --min"
bindsym $mod+Control+Shift+bracketright exec "${HOME}/.local/bin/bright --max"

bindsym $mod+Shift+q exec "${HOME}/.local/bin/exiland -sway"
bindsym $mod+Shift+w exec "swaylock"
bindsym $mod+Shift+e exec "${HOME}/.local/bin/hibe"
bindsym $mod+Shift+m exec "pgrep hyprmag && killall -e hyprmag || hyprmag -r 9999 -s 2"
bindsym $mod+Control+m exec "pgrep hyprmag && killall -e hyprmag || hyprmag"

bindsym Control+space  exec "fcitx5-remote -t"

bindsym $mod+n                  exec "dunstctl history-pop"
bindsym $mod+Shift+n            exec "dunstctl close"
bindsym $mod+Control+Shift+n    exec "dunstctl close-all"

bindsym $mod+y                  exec "${HOME}/.local/bin/shoot"
bindsym $mod+Shift+y            exec "${HOME}/.local/bin/shoot --geo"
bindsym $mod+Control+y          exec "${HOME}/.local/bin/shoot --all"

bindsym $mod+c                  exec "${HOME}/.local/bin/clip"
bindsym $mod+a                  exec "${HOME}/.local/bin/address"
bindsym $mod+Shift+a            exec "${HOME}/.local/bin/address --record"
bindsym $mod+Control+a          exec "${HOME}/.local/bin/address --multi"

bindsym $mod+Control+space      exec "mpc toggle && ${HOME}/.local/bin/lsmus"
bindsym $mod+Control+p          exec "mpc prev"
bindsym $mod+Control+n          exec "mpc next"

bindsym $mod+Control+s          exec "${HOME}/.local/bin/wsk"
bindsym $mod+Shift+b            exec "pgrep gammastep && killall gammastep || gammastep -O 5000"

bindsym $mod+b                  exec "swaymsg bar mode toggle"

bindsym $mod+i focus parent
bindsym $mod+d focus child

bindsym $mod+CONTROL+bracketleft  exec "swaymsg gaps inner current plus 2"
bindsym $mod+CONTROL+bracketright exec "swaymsg gaps inner current minus 2"

bindsym $mod+tab workspace back_and_forth
bindsym $mod+backslash workspace back_and_forth

bindsym $mod+Shift+c kill

bindsym $mod+t layout toggle tabbed split
bindsym $mod+s layout toggle stacking split
bindsym $mod+u layout toggle split

bindsym $mod+x splitv
bindsym $mod+z splith

bindsym $mod+Control+h resize shrink width 30px
bindsym $mod+Control+j resize grow height 30px
bindsym $mod+Control+k resize shrink height 30px
bindsym $mod+Control+l resize grow width 30px

bindsym $mod+space floating toggle
bindsym $mod+f focus mode_toggle
bindsym $mod+e fullscreen

bindsym $mod+Shift+s sticky toggle
bindsym $mod+Shift+o move scratchpad
bindsym $mod+o scratchpad show

bindsym $mod+period focus output right
bindsym $mod+comma focus output left
bindsym $mod+Shift+period move container to output right
bindsym $mod+Shift+comma move container to output left

bindsym $mod+apostrophe workspace next_on_output
bindsym $mod+semicolon workspace prev_on_output
bindsym $mod+Shift+apostrophe move container to workspace next_on_output
bindsym $mod+Shift+semicolon move container to workspace prev_on_output

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+1 workspace number 1
bindsym $mod+2 workspace number 2
bindsym $mod+3 workspace number 3
bindsym $mod+4 workspace number 4
bindsym $mod+5 workspace number 5
bindsym $mod+6 workspace number 6
bindsym $mod+7 workspace number 7
bindsym $mod+8 workspace number 8
bindsym $mod+9 workspace number 9
bindsym $mod+0 workspace 10:0

bindsym $mod+Shift+1 move container to workspace number 1
bindsym $mod+Shift+2 move container to workspace number 2
bindsym $mod+Shift+3 move container to workspace number 3
bindsym $mod+Shift+4 move container to workspace number 4
bindsym $mod+Shift+5 move container to workspace number 5
bindsym $mod+Shift+6 move container to workspace number 6
bindsym $mod+Shift+7 move container to workspace number 7
bindsym $mod+Shift+8 move container to workspace number 8
bindsym $mod+Shift+9 move container to workspace number 9
bindsym $mod+Shift+0 move container to workspace number 10:0

