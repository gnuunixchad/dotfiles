#!/usr/bin/env bash
# @author nate zhou
# @since 2025

if [ "$#" -eq 0 ]; then
    read -p "Sync to the remote IP address: " remote
    [ -z "$remote" ] && ( echo "Invalid IP address, aborted" ; exit 1)
else remote="$1"
fi

echo "rsync -avh --delete-after --progress /home/nate/{doc,mus,pic,vid,pkg} ${remote}:/home/nate";

read -p "Do you want to continue? (y/n): " choice

if [ "$choice" = "y" ] || [ "$choice" = "Y" ]; then
	echo "Continuing ..."
	rsync -avh --delete-after --progress /home/nate/{doc,mus,pic,vid,pkg} ${remote}:/home/nate;
else
	echo "rsync is aborted."
	exit 0
fi
