#!/usr/bin/env bash
# @author nate zhou
# @since 2024,2025

heart="$HOME/doc/heart"
dotfiles="$HOME/doc/unixchad/dotfiles"

read -p "Continue? (y/n): " choice
if [[ "$choice" == "y" || "$choice" == "Y" ]]; then

    rsync -pvh --progress -R /boot/loader/{entries/*,loader.conf} /etc/{firejail/firecfg.config,samba/smb.conf,ssh/sshd_config,systemd/{logind.conf,sleep.conf},tlp.conf,vconsole.conf,libvirt/network.conf,ufw/{user.rules,user6.rules},pacman.conf,pacman.d/{mirrorlist,hooks/*},xdg/reflector/reflector.conf} /usr/local/share/kbd/keymaps/us-custom.map.gz "$heart"/

else
    echo "aborted"
    exit 0
fi
