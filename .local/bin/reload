#!/usr/bin/sh
# @author nate zhou
# @since 2025
# reload - execute cronjobs after system resume

notify-send -r 55 "$(basename $0) ($(date +'%H:%M'))" "Running resume hooks"

${HOME}/.local/sbin/clsx &

${HOME}/.local/bin/updw &

${HOME}/.local/bin/checkupdates-cron --now &

${HOME}/.local/bin/newsboat-update-cron --now &

${HOME}/.local/bin/calcurse-num-cron --now &

${HOME}/.local/bin/mbs && echo
