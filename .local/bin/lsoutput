#!/usr/bin/sh
# @author nate zhou
# @since 2024,2025,2026
# lsoutput - list output

if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
    wlr-randr | grep '^[^[:space:]]'
elif [ -n "$XAUTHORITY" ]; then
    xrandr | grep ' connected '
else
    grep -xl 'connected' /sys/class/drm/card*-*/status \
        | cut -d'/' -f5 \
        | cut -d'-' -f2-
fi
