#!/usr/bin/env /bash
#while :; do
#    current_time=$(date +%T)
#    # bash: echo -n     do not append a newline
#    #            -e     enable backslash escapes
#    # ANSI: \033[K      clear from cursor to the end of line
#    # echo -ne \r       -n makes carriage return move cursor to the beginning
#    #                   of the line
#    echo -ne "$current_time\033[K\r"
