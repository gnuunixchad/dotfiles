#!/usr/bin/sh
# @author nate zhou
# @since 2025
# toggle wshowkeys

start() {
    notify-send -u low -r 290 "$(basename $0)" "wshowkeys on"
    firejail --noprofile --net=none --nosound --novideo --no3d --nodbus \
             wshowkeys -a bottom -b '#11111188' -F 'SourceCodePro 20'
}

stop() {
    notify-send -u low -r 290 "$(basename $0)" "wshowkeys off"
    kill $(pgrep 'wshowkeys')
}

pgrep 'wshowkeys' > /dev/null && stop || start
