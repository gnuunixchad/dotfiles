#!/usr/bin/sh
# @author nate zhou
# @since 2024,2025
# select an image for sway's wallpaper with imv

LIST="${XDG_RUNTIME_DIR}/gallery.list"

notify-send -u low -r 438 "[Shift+w] to set wallpaper"



ls -t $(find $HOME/pic/ -type f ) \
    | grep -e art/drawing \
           -e art/vincent_van_gogh \
           -e camera/views \
           -e earth \
           -e gloomy \
           -e living \
           -e photography \
           -e poetical \
           -e wallpapers \
    | shuf \
    > "$LIST"

swayimg -g -F "$LIST" -o none
