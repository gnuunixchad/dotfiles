#!/usr/bin/sh
# @author nate zhou
# @since 2025,2026
# qute-html - view the HTML source of the current page in an editor

if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
    TERM="footclient -T Floating_Term -o colors.alpha=0.9"
elif [ -n "$XAUTHORITY" ]; then
    TERM="st -T Floating_Term -A 0.9"
fi


$TERM nvim "$QUTE_HTML"
